[includeIf "gitdir:~/JOB/"]
	path = ~/JOB/.gitconfig-job
[includeIf "gitdir:~/MYPROJECTS/"]
	path = ~/MYPROJECTS/.gitconfig-myprojects
[url "ssh://git@gitlab.tcsbank.ru:7999/"]
        insteadOf = https://gitlab.tcsbank.ru/
[url "ssh://git@stash.tcsbank.ru:7999/"]
        insteadOf = https://stash.tcsbank.ru/scm/
[alias]
        l = log --graph --oneline --decorate
        stat = status --short
        commend = commit --amend --no-edit
	dsc-st-hd = rev-parse --short=8 HEAD
        tg = tag --annotate --message ''
        tg-remote = !sh -c 'git tag --annotate --message="$0" "$0" && git push origin "$0"'
        tg-ls-last = describe --tags --abbrev=0
        crazy = !git add . && git commend && git push -f
        st = stash --include-untracked -m
        push-branch-new = push --set-upstream origin HEAD
